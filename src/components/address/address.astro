---
import { Image } from "astro:assets";
import divider from "../../assets/image/divider.png";
---

<div class="address_container">
  <Image width={100} src={divider} alt="divider" />
  <p class="title">마음 전하실 곳</p>

  <div class="section">
    <p class="title">신랑측 마음 전하실 곳</p>
  </div>
  <div class="section">
    <p class="title">신부측 마음 전하실 곳</p>
  </div>
</div>

<style>
  .address_container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    margin-top: 60px;

    .title {
      font-size: 36px;
      font-weight: 900;
    }

    .section {
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: flex-start;

      margin-top: 40px;

      .title {
        font-size: 28px;
        font-weight: 900;
      }

      .description {
        font-size: 20px;
        font-weight: 900;
      }
    }
  }
</style>
