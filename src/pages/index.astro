---
import Gallery from "../components/gallery/gallery.astro";
import Main from "../components/main/main.astro";
import SecondSection from "../components/secondSection/secondSection.astro";
import WeddingInfo from "../components/weddingInfo/weddingInfo.astro";
import Layout from "../layouts/Layout.astro";
import "./index.css";
---

<Layout>
  <div class="container">
    <div class="content">
      <Main />
      <WeddingInfo />
      <SecondSection />
      <Gallery />
    </div>
  </div>
</Layout>

<style>
  @font-face {
    font-family: "son";
    src: url("../assets/font/son.ttf") format("woff2");
  }

  .container {
    font-family: "son";
    font-weight: 700;
    position: relative;

    color: #000;
    width: 100%;
    min-height: 100vh;

    .content {
      margin: 0 auto;

      max-width: 480px;

      padding: 0 20px 30px;
    }
  }
</style>
